<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.image.ImageView?>

<StackPane fx:id="stackPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#handleStackPaneClick" prefHeight="400.0" prefWidth="600.0" styleClass="root-stack-pane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.training.fxplayer.PlayerController">
   <children>
      <StackPane fx:id="mediaContainer">
      	<MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" />
      	<ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" />
      	<Label fx:id="errorMessageLabel" styleClass="error-label" />
      </StackPane>
      <VBox fx:id="controlsBox" alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Slider fx:id="progressSlider" onMouseDragged="#handleProgressSliderOnMousePressedAndDragged" onMousePressed="#handleProgressSliderOnMousePressedAndDragged" style="-fx-cursor: hand;">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Slider>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Button fx:id="playButton" mnemonicParsing="false" onAction="#handlePlayButtonClick" style="-fx-cursor: hand;" styleClass="transparent-button" />
                  <Button fx:id="replay10Button" mnemonicParsing="false" onAction="#handleReplay10ButtonClick" style="-fx-cursor: hand;" styleClass="transparent-button" />
                  <Button fx:id="forward30Button" mnemonicParsing="false" onAction="#handleForward30ButtonClick" style="-fx-cursor: hand;" styleClass="transparent-button" />
                  <HBox fx:id="volumeControlsHBox" alignment="CENTER_LEFT" onMouseExited="#handleMouseExitingVolumeControlsHBox" prefHeight="100.0" prefWidth="200.0">
                     <children>
                     	<Button fx:id="volumeButton" mnemonicParsing="false" onAction="#handleVolumeButtonClick" onMouseEntered="#handleMouseEnteringVolumeButton" style="-fx-cursor: hand;" styleClass="transparent-button" />
                        <Slider fx:id="volumeSlider" blockIncrement="0.1" max="1.0" style="-fx-cursor: hand;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                     	<Label fx:id="currentTimeLabel" styleClass="time-label" />
                     	<Label fx:id="durationLabel" styleClass="time-label" />
                        <Button fx:id="openFileButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleOpenFileButtonClick" style="-fx-cursor: hand;" styleClass="transparent-button" />
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
